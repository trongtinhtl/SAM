        </ul>
    </div>    <!-- end wrapper -->
    <!-- start micro navigation -->
    <nav id="nav-micro-container">
        <div class="wrapper">
            <div class="search-nav-container">
                <div id="micro-search-form" class="hide-for-mobile">
                    <form class="search-form" id="search-form" method="get" action="/search/node" target="_self" novalidate="novalidate">
                        <input type="text" name="terms" placeholder="Search" size="25" value="" class="input-text">
                        <button type="submit" class="input-submit">@WACLIM.Resources.Language.Search</button>
                    </form>

                </div>
                <ul id="nav-micro">
                    <li><a href="/contact" title="">@WACLIM.Resources.Language.Contact</a></li>

                    <li><a href="/information-staff-and-students" class="member">@WACLIM.Resources.Language.Login</a></li>
                </ul>
                <div id="container-language" class="custom-select">
                    <form id="form-language" action="@Url.Action("ChangeLanguage", "Languages")">
                        <select id="select-language" name="culture">
                            @{
                                System.Globalization.CultureInfo currentCulture = System.Threading.Thread.CurrentThread.CurrentCulture;

                                if (currentCulture.Name == "en-US")
                                {
                                    <option class="language-en" value="en-US" selected="selected">@WACLIM.Resources.Language.English</option>
                                    <option class="language-vi" value="vi-VN">@WACLIM.Resources.Language.Vietnamese</option>
                                }
                                else
                                {
                                    <option class="language-en" value="en-US">@WACLIM.Resources.Language.English</option>
                                    <option class="language-vi" value="vi-VN" selected="selected">@WACLIM.Resources.Language.Vietnamese</option>
                                }
                            }
                        </select>
                    </form>
                </div>
            </div>
        </div>
    </nav>    <!-- end micro navigation -->
</nav>
<!-- end main navigation -->

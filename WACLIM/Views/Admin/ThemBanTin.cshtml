
@{
    ViewBag.Title = "Thêm bản tin";
    //Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="VModule" vmodule-name="thembantin" id="vmodule-thembantin">
    <div id="mainContent">
        <div class="bgc-white p-20 bd-content">
            <h5 class="c-grey-900">Thêm bản tin, bài viết</h5>
            <div class="mT-30">
                <form id="frmThemBanTin">
                    <div class="form-group">
                        <label for="tieuDe">Tiêu đề bài viết</label>
                        <input type="text" class="form-control bdc-grey-200" id="tieuDe" name="tieuDe">
                    </div>
                    <div class="form-group">
                        <label for="tomTat">Tóm tắt</label>
                        <textarea type="text" class="form-control bdc-grey-200" id="tomTat" name="tomTat"></textarea>
                    </div>
                    <div class="form-row">
                        <div class="form-group col-md-6">
                            <label for="tacGia">Tác giả</label>
                            <input type="text" class="form-control bdc-grey-200" id="tacGia" name="tacGia">
                        </div>
                        <div class="col-md-6">
                            <label>Ngày xuất bản</label>
                            <div class=" input-icon form-group">
                                <div class="input-group">
                                    <div class="input-group-addon bgc-white bd bdwR-0">
                                        <i class="ti-calendar"></i>
                                    </div>
                                    <input type="text" class="form-control bdc-grey-200 datepicker">
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="form-row">
                        <div class="form-group col-md-6">
                            <label for="ngayXuatBan">Thể loại</label>
                            <select id="inputState" class="form-control bdc-grey-200">
                                <option selected="selected">Bài báo khoa học</option>
                                <option>Tin tức</option>
                            </select>
                        </div>
                        <div class="form-group col-md-6">
                            <label for="urlHinh">Đường dẩn ảnh</label>
                            <input type="text" class="form-control bdc-grey-200" id="urlHinh" name="urlHinh">
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="noiDungBanTin">Nội dung</label>
                        <textarea type="text" class="form-control bdc-grey-200" id="noiDungBanTin" name="noiDung"></textarea>
                    </div>
                    <div class="text-right">
                        <button type="button" class="btn btn-primary" id="btnThemBanTin">Thêm bài viết</button>
                    </div>
                </form>
            </div>
        </div>
        <script type="text/javascript" src="~/Assets/js/Admin/thembantin.js"></script>
    </div>
</div>